{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    
    // Best practices
    "strict": true,
    "skipLibCheck": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Type checking
    "checkJs": true
  },
  "include": ["./src/**/*.ts", "./build/dev/javascript/gtsc/**/*.d.mts", "./build/dev/javascript/gtsc/**/*.ts"]
}
